{
  "name": "calc-image-stats",
  "version": "0.7.0",
  "description": "Calculate Band Statistics for an Image",
  "main": "calc-image-stats.js",
  "files": [
    "calc-image-stats.js",
    "calc-image-stats.d.ts"
  ],
  "types": "./calc-image-stats.d.ts",
  "scripts": {
    "build": "esbuild ./src/calc-image-stats.js --target=es2016 --outfile=./calc-image-stats.js",
    "f": "npm run format",
    "format": "npx prettier --arrow-parens=avoid --trailing-comma=none --write *.js *.ts",
    "prepublishOnly": "npm run format && npm run build",
    "test": "npm run test:js && npm run test:ts",
    "test:js": "node test.js",
    "test:ts": "npx ts-node test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielJDufour/calc-image-stats.git"
  },
  "keywords": [
    "calc",
    "image",
    "jpg",
    "png",
    "tif",
    "stats"
  ],
  "author": "Daniel J. Dufour",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/DanielJDufour/calc-image-stats/issues"
  },
  "homepage": "https://github.com/DanielJDufour/calc-image-stats#readme",
  "dependencies": {
    "calc-stats": "^2.1.0",
    "guess-image-layout": "^0.1.0",
    "xdim": "^1.10.1"
  },
  "devDependencies": {
    "esbuild": "^0.18.17",
    "find-and-read": "^1.2.0",
    "flug": "^2.6.0",
    "readim": "^1.0.0"
  }
}
